{
  "openapi" : "3.0.3",
  "info" : {
    "title" : "task-generator API",
    "version" : "0.1.0-SNAPSHOT"
  },
  "paths" : {
    "/api/flows" : {
      "get" : {
        "tags" : [ "Task Flow Resource" ],
        "responses" : {
          "200" : {
            "description" : "OK",
            "content" : {
              "application/json" : {
                "schema" : {
                  "type" : "array",
                  "items" : {
                    "$ref" : "#/components/schemas/TaskFlow"
                  }
                }
              }
            }
          }
        }
      }
    },
    "/api/resource-requests" : {
      "post" : {
        "tags" : [ "Resource Request Service" ],
        "requestBody" : {
          "content" : {
            "application/json" : {
              "schema" : {
                "$ref" : "#/components/schemas/ObjectResourceRequest"
              }
            }
          }
        },
        "responses" : {
          "200" : {
            "description" : "OK",
            "content" : {
              "application/json" : {
                "schema" : {
                  "$ref" : "#/components/schemas/TaskFlow"
                }
              }
            }
          }
        }
      }
    },
    "/api/task-completions" : {
      "get" : {
        "tags" : [ "Task Completion Resource" ],
        "responses" : {
          "200" : {
            "description" : "OK",
            "content" : {
              "application/json" : {
                "schema" : {
                  "type" : "array",
                  "items" : {
                    "$ref" : "#/components/schemas/TaskCompletion"
                  }
                }
              }
            }
          }
        }
      }
    }
  },
  "components" : {
    "schemas" : {
      "ObjectResourceRequest" : {
        "type" : "object",
        "properties" : {
          "ownerObjectId" : {
            "type" : "string"
          },
          "requestFile" : {
            "type" : "string"
          }
        }
      },
      "Status" : {
        "enum" : [ "FAILED", "SUCCEEDED" ],
        "type" : "string"
      },
      "Task" : {
        "type" : "object",
        "properties" : {
          "commands" : {
            "type" : "array",
            "items" : {
              "type" : "string"
            }
          },
          "containerArgs" : {
            "type" : "array",
            "items" : {
              "type" : "string"
            }
          },
          "env" : {
            "type" : "object",
            "additionalProperties" : {
              "type" : "string"
            }
          },
          "functionName" : {
            "type" : "string"
          },
          "id" : {
            "type" : "string"
          },
          "image" : {
            "type" : "string"
          },
          "mainObj" : {
            "type" : "string"
          },
          "outputObj" : {
            "type" : "string"
          },
          "resourceType" : {
            "type" : "string"
          }
        }
      },
      "TaskCompletion" : {
        "type" : "object",
        "properties" : {
          "completionTime" : {
            "type" : "string"
          },
          "debugCondition" : {
            "type" : "string"
          },
          "debugLog" : {
            "type" : "string"
          },
          "functionName" : {
            "type" : "string"
          },
          "id" : {
            "type" : "string"
          },
          "mainObj" : {
            "type" : "string"
          },
          "outputObj" : {
            "type" : "string"
          },
          "requestFile" : {
            "type" : "string"
          },
          "resourceUrl" : {
            "type" : "string"
          },
          "startTime" : {
            "type" : "string"
          },
          "status" : {
            "$ref" : "#/components/schemas/Status"
          }
        }
      },
      "TaskFlow" : {
        "type" : "object",
        "properties" : {
          "id" : {
            "type" : "string"
          },
          "prerequisiteTasks" : {
            "type" : "array",
            "items" : {
              "type" : "string"
            }
          },
          "submitted" : {
            "type" : "boolean"
          },
          "task" : {
            "$ref" : "#/components/schemas/Task"
          }
        }
      }
    }
  }
}